<div class="input-group col-12">
    <div class="col-md-3">
        <input id="usernameMonthlyData" type="text" class="form-control" placeholder="Username" />
    </div>
    <div class="col-md-3">
        <input id="yearMonthlyData" type="number" class="form-control" placeholder="Year" min="2020" max="2050"/>
    </div>
    <div class="col-md-3">
        <div id="monthMonthlyData">{{>modules/monthsDropdown}}</div>
    </div>
    <div class="col-md-3">
        <button id="monthlyDataSearch" class="btn btn-primary" onclick="searchMonthlyData()">Chercher</button>
    </div>
</div>

<div id="monthlyDataLoader" class="spinner-border hidden" role="status">
  <span class="visually-hidden">Loading...</span>
</div>

<div id="monthlyDataContent" class="hidden">
    
</div>

<script src="./js/monthlyData.js"></script>